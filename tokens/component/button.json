{
  "$description": "Button component tokens - references semantic layer only (architecture rule)",

  "primary": {
    "$description": "Primary button variant",
    "$extensions": {
      "ontology.layer": "component",
      "ontology.references-only": "semantic"
    },
    "background": {
      "rest": {
        "$value": "{semantic.emphasis.primary.background}",
        "$type": "color",
        "$description": "Primary button background"
      },
      "hover": {
        "$value": "{semantic.color.accent.hover}",
        "$type": "color",
        "$description": "Primary button hover background"
      },
      "active": {
        "$value": "{semantic.color.accent.active}",
        "$type": "color",
        "$description": "Primary button active background"
      },
      "disabled": {
        "$value": "{semantic.color.surface.muted}",
        "$type": "color",
        "$description": "Primary button disabled background"
      }
    },
    "foreground": {
      "rest": {
        "$value": "{semantic.emphasis.primary.foreground}",
        "$type": "color",
        "$description": "Primary button text"
      },
      "disabled": {
        "$value": "{semantic.color.foreground.disabled}",
        "$type": "color",
        "$description": "Primary button disabled text"
      }
    },
    "border": {
      "rest": {
        "$value": "{semantic.emphasis.primary.border}",
        "$type": "color",
        "$description": "Primary button border"
      },
      "focus": {
        "$value": "{state.combinable.focus.ring-color}",
        "$type": "color",
        "$description": "Primary button focus ring"
      }
    }
  },

  "secondary": {
    "$description": "Secondary button variant",
    "$extensions": {
      "ontology.layer": "component",
      "ontology.references-only": "semantic"
    },
    "background": {
      "rest": {
        "$value": "{semantic.emphasis.secondary.background}",
        "$type": "color",
        "$description": "Secondary button background"
      },
      "hover": {
        "$value": "#5c636a",
        "$type": "color",
        "$description": "Secondary button hover"
      },
      "disabled": {
        "$value": "{semantic.color.surface.muted}",
        "$type": "color",
        "$description": "Secondary button disabled"
      }
    },
    "foreground": {
      "rest": {
        "$value": "{semantic.emphasis.secondary.foreground}",
        "$type": "color",
        "$description": "Secondary button text"
      },
      "disabled": {
        "$value": "{semantic.color.foreground.disabled}",
        "$type": "color",
        "$description": "Secondary button disabled text"
      }
    }
  },

  "tertiary": {
    "$description": "Tertiary/outline button variant",
    "$extensions": {
      "ontology.layer": "component",
      "ontology.references-only": "semantic"
    },
    "background": {
      "rest": {
        "$value": "transparent",
        "$type": "color",
        "$description": "Tertiary button background"
      },
      "hover": {
        "$value": "{semantic.color.accent.subtle}",
        "$type": "color",
        "$description": "Tertiary button hover"
      }
    },
    "foreground": {
      "rest": {
        "$value": "{semantic.emphasis.tertiary.foreground}",
        "$type": "color",
        "$description": "Tertiary button text"
      }
    },
    "border": {
      "rest": {
        "$value": "{semantic.emphasis.tertiary.border}",
        "$type": "color",
        "$description": "Tertiary button border"
      }
    }
  },

  "ghost": {
    "$description": "Ghost button variant",
    "$extensions": {
      "ontology.layer": "component",
      "ontology.references-only": "semantic"
    },
    "background": {
      "rest": {
        "$value": "transparent",
        "$type": "color",
        "$description": "Ghost button background"
      },
      "hover": {
        "$value": "{semantic.emphasis.ghost.background-hover}",
        "$type": "color",
        "$description": "Ghost button hover"
      }
    },
    "foreground": {
      "rest": {
        "$value": "{semantic.emphasis.ghost.foreground}",
        "$type": "color",
        "$description": "Ghost button text"
      }
    }
  },

  "destructive": {
    "$description": "Destructive/danger button variant",
    "$extensions": {
      "ontology.layer": "component",
      "ontology.references-only": "semantic"
    },
    "background": {
      "rest": {
        "$value": "{semantic.emphasis.destructive.background}",
        "$type": "color",
        "$description": "Destructive button background"
      },
      "hover": {
        "$value": "{semantic.emphasis.destructive.background-hover}",
        "$type": "color",
        "$description": "Destructive button hover"
      }
    },
    "foreground": {
      "rest": {
        "$value": "{semantic.emphasis.destructive.foreground}",
        "$type": "color",
        "$description": "Destructive button text"
      }
    }
  },

  "sizing": {
    "$description": "Button size tokens",
    "sm": {
      "height": {
        "$value": "{preference.density.component-height.compact}",
        "$type": "dimension",
        "$description": "Small button height"
      },
      "padding-x": {
        "$value": "{semantic.spacing.inset.sm}",
        "$type": "dimension",
        "$description": "Small button horizontal padding"
      },
      "font-size": {
        "$value": "{semantic.typography.font-size.sm}",
        "$type": "fontSize",
        "$description": "Small button font size"
      }
    },
    "md": {
      "height": {
        "$value": "{preference.density.component-height.comfortable}",
        "$type": "dimension",
        "$description": "Medium button height"
      },
      "padding-x": {
        "$value": "{semantic.spacing.inset.md}",
        "$type": "dimension",
        "$description": "Medium button horizontal padding"
      },
      "font-size": {
        "$value": "{semantic.typography.font-size.md}",
        "$type": "fontSize",
        "$description": "Medium button font size"
      }
    },
    "lg": {
      "height": {
        "$value": "{preference.density.component-height.spacious}",
        "$type": "dimension",
        "$description": "Large button height"
      },
      "padding-x": {
        "$value": "{semantic.spacing.inset.lg}",
        "$type": "dimension",
        "$description": "Large button horizontal padding"
      },
      "font-size": {
        "$value": "{semantic.typography.font-size.lg}",
        "$type": "fontSize",
        "$description": "Large button font size"
      }
    }
  },

  "shape": {
    "$description": "Button shape tokens",
    "border-radius": {
      "$value": 6,
      "$type": "dimension",
      "$description": "Button corner radius"
    },
    "border-width": {
      "$value": 1,
      "$type": "dimension",
      "$description": "Button border width"
    }
  },

  "motion": {
    "$description": "Button animation tokens",
    "transition-duration": {
      "$value": "150ms",
      "$type": "string",
      "$description": "Button transition duration"
    },
    "transition-timing": {
      "$value": "ease-in-out",
      "$type": "string",
      "$description": "Button transition easing"
    },
    "active-scale": {
      "$value": "{state.interaction.active.scale}",
      "$type": "number",
      "$description": "Button press scale"
    }
  }
}
