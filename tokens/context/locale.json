{
  "$description": "Locale context dimensions - linguistic, cultural, and typographic requirements",

  "text-direction": {
    "$description": "Text directionality",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared",
      "ontology.html-attr": "dir"
    },
    "ltr": {
      "$value": "ltr",
      "$type": "string",
      "$description": "Left-to-right text direction"
    },
    "rtl": {
      "$value": "rtl",
      "$type": "string",
      "$description": "Right-to-left text direction"
    },
    "auto": {
      "$value": "auto",
      "$type": "string",
      "$description": "Auto-detect from content"
    }
  },

  "writing-mode": {
    "$description": "Text writing mode / flow direction",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared",
      "ontology.css-property": "writing-mode"
    },
    "horizontal-tb": {
      "$value": "horizontal-tb",
      "$type": "string",
      "$description": "Horizontal, top-to-bottom (default)"
    },
    "vertical-rl": {
      "$value": "vertical-rl",
      "$type": "string",
      "$description": "Vertical, right-to-left (CJK traditional)"
    },
    "vertical-lr": {
      "$value": "vertical-lr",
      "$type": "string",
      "$description": "Vertical, left-to-right (Mongolian)"
    },
    "sideways-rl": {
      "$value": "sideways-rl",
      "$type": "string",
      "$description": "Sideways, right-to-left"
    },
    "sideways-lr": {
      "$value": "sideways-lr",
      "$type": "string",
      "$description": "Sideways, left-to-right"
    }
  },

  "script-type": {
    "$description": "Writing system classification",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "computed"
    },
    "latin": {
      "$value": "latin",
      "$type": "string",
      "$description": "Latin script (English, Spanish, etc.)"
    },
    "cjk": {
      "$value": "cjk",
      "$type": "string",
      "$description": "CJK ideographs (Chinese, Japanese, Korean)"
    },
    "arabic": {
      "$value": "arabic",
      "$type": "string",
      "$description": "Arabic script"
    },
    "cyrillic": {
      "$value": "cyrillic",
      "$type": "string",
      "$description": "Cyrillic script (Russian, etc.)"
    },
    "devanagari": {
      "$value": "devanagari",
      "$type": "string",
      "$description": "Devanagari script (Hindi, etc.)"
    },
    "thai": {
      "$value": "thai",
      "$type": "string",
      "$description": "Thai script"
    }
  },

  "text-expansion-factor": {
    "$description": "UI sizing multiplier for translation",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "computed"
    },
    "english": {
      "$value": 1.0,
      "$type": "number",
      "$description": "English baseline"
    },
    "german": {
      "$value": 1.3,
      "$type": "number",
      "$description": "German (20-35% expansion)"
    },
    "finnish": {
      "$value": 1.35,
      "$type": "number",
      "$description": "Finnish (25-40% expansion)"
    },
    "chinese": {
      "$value": 0.8,
      "$type": "number",
      "$description": "Chinese (10-30% contraction)"
    },
    "japanese": {
      "$value": 0.9,
      "$type": "number",
      "$description": "Japanese (slight contraction)"
    },
    "arabic": {
      "$value": 1.25,
      "$type": "number",
      "$description": "Arabic (20-30% expansion)"
    }
  },

  "quote-style": {
    "$description": "Locale-specific quotation marks",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "computed"
    },
    "english": {
      "$value": "\"text\"",
      "$type": "string",
      "$description": "English double quotes"
    },
    "german": {
      "$value": "„text"",
      "$type": "string",
      "$description": "German low-high quotes"
    },
    "french": {
      "$value": "«text»",
      "$type": "string",
      "$description": "French guillemets"
    },
    "japanese": {
      "$value": "「text」",
      "$type": "string",
      "$description": "Japanese corner brackets"
    }
  },

  "calendar-system": {
    "$description": "Regional calendar system",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared"
    },
    "gregorian": {
      "$value": "gregorian",
      "$type": "string",
      "$description": "Gregorian calendar (international)"
    },
    "hijri": {
      "$value": "hijri",
      "$type": "string",
      "$description": "Islamic Hijri calendar"
    },
    "buddhist": {
      "$value": "buddhist",
      "$type": "string",
      "$description": "Buddhist calendar"
    },
    "hebrew": {
      "$value": "hebrew",
      "$type": "string",
      "$description": "Hebrew calendar"
    },
    "japanese": {
      "$value": "japanese",
      "$type": "string",
      "$description": "Japanese imperial calendar"
    }
  },

  "pluralization-forms": {
    "$description": "Number of plural forms per CLDR",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "computed"
    },
    "english": {
      "$value": 2,
      "$type": "number",
      "$description": "English: 2 forms (singular, plural)"
    },
    "french": {
      "$value": 2,
      "$type": "number",
      "$description": "French: 2 forms"
    },
    "russian": {
      "$value": 3,
      "$type": "number",
      "$description": "Russian: 3 forms"
    },
    "arabic": {
      "$value": 6,
      "$type": "number",
      "$description": "Arabic: 6 forms (zero, one, two, few, many, other)"
    },
    "chinese": {
      "$value": 1,
      "$type": "number",
      "$description": "Chinese: 1 form (no plural distinction)"
    }
  },

  "line-height-adjustment": {
    "$description": "Script-specific line height multiplier",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "computed"
    },
    "latin": {
      "$value": 1.5,
      "$type": "number",
      "$description": "Latin script baseline"
    },
    "cjk": {
      "$value": 1.7,
      "$type": "number",
      "$description": "CJK requires extra line height"
    },
    "arabic": {
      "$value": 1.8,
      "$type": "number",
      "$description": "Arabic with diacritics needs more space"
    },
    "thai": {
      "$value": 1.9,
      "$type": "number",
      "$description": "Thai with stacked diacritics"
    }
  }
}
