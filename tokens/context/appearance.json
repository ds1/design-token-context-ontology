{
  "$description": "Appearance context dimensions - visual presentation based on user preferences, system settings, and brand requirements",

  "color-scheme": {
    "$description": "System or user color scheme preference",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "prefers-color-scheme"
    },
    "light": {
      "$value": "light",
      "$type": "string",
      "$description": "Light color scheme"
    },
    "dark": {
      "$value": "dark",
      "$type": "string",
      "$description": "Dark color scheme"
    },
    "auto": {
      "$value": "auto",
      "$type": "string",
      "$description": "Follow system preference"
    },
    "dim": {
      "$value": "dim",
      "$type": "string",
      "$description": "Dimmed dark variant (reduced contrast dark)"
    }
  },

  "contrast-preference": {
    "$description": "User contrast preference",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "prefers-contrast"
    },
    "standard": {
      "$value": "standard",
      "$type": "string",
      "$description": "No preference, standard contrast"
    },
    "more": {
      "$value": "more",
      "$type": "string",
      "$description": "User prefers higher contrast"
    },
    "less": {
      "$value": "less",
      "$type": "string",
      "$description": "User prefers lower contrast"
    }
  },

  "forced-colors": {
    "$description": "System forced colors mode (Windows High Contrast)",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "forced-colors"
    },
    "none": {
      "$value": "none",
      "$type": "string",
      "$description": "Forced colors not active"
    },
    "active": {
      "$value": "active",
      "$type": "string",
      "$description": "Forced colors active - system colors override all"
    }
  },

  "high-contrast-theme": {
    "$description": "Windows high contrast theme variant",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "inferred",
      "ontology.platform-api": "Windows"
    },
    "none": {
      "$value": "none",
      "$type": "string",
      "$description": "No high contrast theme"
    },
    "black": {
      "$value": "black",
      "$type": "string",
      "$description": "High Contrast Black theme"
    },
    "white": {
      "$value": "white",
      "$type": "string",
      "$description": "High Contrast White theme"
    },
    "aquatic": {
      "$value": "aquatic",
      "$type": "string",
      "$description": "High Contrast Aquatic theme"
    },
    "desert": {
      "$value": "desert",
      "$type": "string",
      "$description": "High Contrast Desert theme"
    },
    "custom": {
      "$value": "custom",
      "$type": "string",
      "$description": "Custom high contrast theme"
    }
  },

  "color-scheme-variant": {
    "$description": "Brand-specific color scheme variations",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared"
    },
    "standard": {
      "$value": "standard",
      "$type": "string",
      "$description": "Standard color saturation"
    },
    "tinted": {
      "$value": "tinted",
      "$type": "string",
      "$description": "Tinted surfaces with brand color"
    },
    "vivid": {
      "$value": "vivid",
      "$type": "string",
      "$description": "High saturation variant"
    },
    "muted": {
      "$value": "muted",
      "$type": "string",
      "$description": "Desaturated, muted variant"
    }
  },

  "dynamic-color-source": {
    "$description": "Source for dynamic/algorithmic color generation",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "inferred",
      "ontology.platform-api": "Android DynamicColors, iOS 15+"
    },
    "none": {
      "$value": "none",
      "$type": "string",
      "$description": "No dynamic color - use static palette"
    },
    "wallpaper": {
      "$value": "wallpaper",
      "$type": "string",
      "$description": "Extract from device wallpaper"
    },
    "brand-logo": {
      "$value": "brand-logo",
      "$type": "string",
      "$description": "Extract from brand logo"
    },
    "content-image": {
      "$value": "content-image",
      "$type": "string",
      "$description": "Extract from content image"
    },
    "user-selected": {
      "$value": "user-selected",
      "$type": "string",
      "$description": "User-selected accent color"
    }
  },

  "color-temperature": {
    "$description": "Warm/cool tint variant of theme",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared"
    },
    "warm": {
      "$value": "warm",
      "$type": "string",
      "$description": "Warm tint (yellow/orange shift)"
    },
    "neutral": {
      "$value": "neutral",
      "$type": "string",
      "$description": "Neutral, no tint shift"
    },
    "cool": {
      "$value": "cool",
      "$type": "string",
      "$description": "Cool tint (blue shift)"
    }
  },

  "color-gamut": {
    "$description": "Display color space capability",
    "$extensions": {
      "ontology.volatility": "immutable",
      "ontology.detection": "inferred",
      "ontology.css-query": "color-gamut"
    },
    "srgb": {
      "$value": "srgb",
      "$type": "string",
      "$description": "Standard sRGB color space"
    },
    "p3": {
      "$value": "p3",
      "$type": "string",
      "$description": "Display P3 wide gamut"
    },
    "rec2020": {
      "$value": "rec2020",
      "$type": "string",
      "$description": "Rec. 2020 ultra-wide gamut"
    }
  },

  "tonal-elevation-mode": {
    "$description": "How elevation is represented visually",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared"
    },
    "tonal": {
      "$value": "tonal",
      "$type": "string",
      "$description": "Elevation via surface tint (Material 3)"
    },
    "shadow": {
      "$value": "shadow",
      "$type": "string",
      "$description": "Elevation via drop shadows"
    },
    "hybrid": {
      "$value": "hybrid",
      "$type": "string",
      "$description": "Combined tint and shadow"
    }
  }
}
