{
  "$description": "Density context dimensions - spatial relationships, touch targets, and information density",

  "density-mode": {
    "$description": "Overall UI density setting",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared"
    },
    "compact": {
      "$value": "compact",
      "$type": "string",
      "$description": "Highest density, smallest spacing"
    },
    "comfortable": {
      "$value": "comfortable",
      "$type": "string",
      "$description": "Balanced density for general use"
    },
    "spacious": {
      "$value": "spacious",
      "$type": "string",
      "$description": "Lowest density, maximum breathing room"
    }
  },

  "density-scale": {
    "$description": "Numeric density scale (Material Design pattern)",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared"
    },
    "0": {
      "$value": 0,
      "$type": "number",
      "$description": "Default density (baseline)"
    },
    "-1": {
      "$value": -1,
      "$type": "number",
      "$description": "Density -1 (4px reduction)"
    },
    "-2": {
      "$value": -2,
      "$type": "number",
      "$description": "Density -2 (8px reduction)"
    },
    "-3": {
      "$value": -3,
      "$type": "number",
      "$description": "Density -3 (12px reduction, minimum)"
    }
  },

  "touch-optimization": {
    "$description": "Touch target optimization level",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "pointer: coarse"
    },
    "standard": {
      "$value": "standard",
      "$type": "string",
      "$description": "Standard targets for precise input"
    },
    "touch-optimized": {
      "$value": "touch-optimized",
      "$type": "string",
      "$description": "Enlarged targets for touch input"
    }
  },

  "input-device-precision": {
    "$description": "Primary input device accuracy",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "pointer, any-pointer"
    },
    "fine": {
      "$value": "fine",
      "$type": "string",
      "$description": "Fine pointer (mouse, trackpad)"
    },
    "coarse": {
      "$value": "coarse",
      "$type": "string",
      "$description": "Coarse pointer (touch, basic stylus)"
    },
    "pen": {
      "$value": "pen",
      "$type": "string",
      "$description": "Precision stylus/pen input"
    },
    "hybrid": {
      "$value": "hybrid",
      "$type": "string",
      "$description": "Multiple input types available"
    }
  },

  "content-density": {
    "$description": "Information density within containers",
    "$extensions": {
      "ontology.volatility": "inherited",
      "ontology.detection": "declared"
    },
    "low": {
      "$value": "low",
      "$type": "string",
      "$description": "Low information density, ample whitespace"
    },
    "medium": {
      "$value": "medium",
      "$type": "string",
      "$description": "Balanced information density"
    },
    "high": {
      "$value": "high",
      "$type": "string",
      "$description": "High information density, data-heavy"
    }
  },

  "scale-factor": {
    "$description": "Device pixel ratio / display scale",
    "$extensions": {
      "ontology.volatility": "immutable",
      "ontology.detection": "inferred",
      "ontology.css-query": "resolution"
    },
    "1x": {
      "$value": 1,
      "$type": "number",
      "$description": "Standard resolution (1:1)"
    },
    "1.25x": {
      "$value": 1.25,
      "$type": "number",
      "$description": "125% scale (Windows common)"
    },
    "1.5x": {
      "$value": 1.5,
      "$type": "number",
      "$description": "150% scale"
    },
    "1.75x": {
      "$value": 1.75,
      "$type": "number",
      "$description": "175% scale (Windows common)"
    },
    "2x": {
      "$value": 2,
      "$type": "number",
      "$description": "Retina/HiDPI (2:1)"
    }
  },

  "font-scaling": {
    "$description": "Text scaling independent of UI scaling",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "inferred",
      "ontology.platform-api": "Accessibility settings"
    },
    "default": {
      "$value": "default",
      "$type": "string",
      "$description": "Default text size"
    },
    "large": {
      "$value": "large",
      "$type": "string",
      "$description": "Large text (typically 125%)"
    },
    "larger": {
      "$value": "larger",
      "$type": "string",
      "$description": "Larger text (typically 150%)"
    },
    "largest": {
      "$value": "largest",
      "$type": "string",
      "$description": "Largest text (typically 200%)"
    }
  },

  "interaction-precision": {
    "$description": "Motor control / accessibility requirements",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared"
    },
    "standard": {
      "$value": "standard",
      "$type": "string",
      "$description": "Standard interaction requirements"
    },
    "accessible": {
      "$value": "accessible",
      "$type": "string",
      "$description": "Accessible mode (larger targets, slower interactions)"
    }
  },

  "minimum-target-size": {
    "$description": "Minimum interactive target size per WCAG",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared"
    },
    "24px": {
      "$value": 24,
      "$type": "dimension",
      "$description": "WCAG 2.2 Level AA minimum"
    },
    "44px": {
      "$value": 44,
      "$type": "dimension",
      "$description": "WCAG 2.2 Level AAA / Apple HIG minimum"
    }
  }
}
