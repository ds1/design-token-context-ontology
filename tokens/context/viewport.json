{
  "$description": "Viewport context dimensions - device screen characteristics, orientation, and foldable states",

  "breakpoint": {
    "$description": "Responsive breakpoint classification",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "min-width, max-width"
    },
    "xs": {
      "$value": 0,
      "$type": "dimension",
      "$description": "Extra small: 0-575px"
    },
    "sm": {
      "$value": 576,
      "$type": "dimension",
      "$description": "Small: 576-767px"
    },
    "md": {
      "$value": 768,
      "$type": "dimension",
      "$description": "Medium: 768-991px"
    },
    "lg": {
      "$value": 992,
      "$type": "dimension",
      "$description": "Large: 992-1199px"
    },
    "xl": {
      "$value": 1200,
      "$type": "dimension",
      "$description": "Extra large: 1200-1399px"
    },
    "xxl": {
      "$value": 1400,
      "$type": "dimension",
      "$description": "Extra extra large: 1400px+"
    }
  },

  "orientation": {
    "$description": "Device orientation",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "orientation"
    },
    "portrait": {
      "$value": "portrait",
      "$type": "string",
      "$description": "Portrait orientation (height > width)"
    },
    "landscape": {
      "$value": "landscape",
      "$type": "string",
      "$description": "Landscape orientation (width > height)"
    }
  },

  "display-mode": {
    "$description": "PWA / app display mode",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "display-mode"
    },
    "browser": {
      "$value": "browser",
      "$type": "string",
      "$description": "Standard browser tab"
    },
    "standalone": {
      "$value": "standalone",
      "$type": "string",
      "$description": "Standalone app window"
    },
    "fullscreen": {
      "$value": "fullscreen",
      "$type": "string",
      "$description": "Fullscreen mode"
    },
    "minimal-ui": {
      "$value": "minimal-ui",
      "$type": "string",
      "$description": "Minimal browser UI"
    },
    "window-controls-overlay": {
      "$value": "window-controls-overlay",
      "$type": "string",
      "$description": "PWA with custom titlebar"
    }
  },

  "pixel-density": {
    "$description": "Display pixel density",
    "$extensions": {
      "ontology.volatility": "immutable",
      "ontology.detection": "inferred",
      "ontology.css-query": "resolution"
    },
    "1x": {
      "$value": 1,
      "$type": "number",
      "$description": "Standard density"
    },
    "2x": {
      "$value": 2,
      "$type": "number",
      "$description": "Retina / HiDPI"
    },
    "3x": {
      "$value": 3,
      "$type": "number",
      "$description": "Super Retina"
    },
    "infinite": {
      "$value": "infinite",
      "$type": "string",
      "$description": "Vector display (per CSS spec)"
    }
  },

  "safe-area-insets": {
    "$description": "Device safe area insets (notch, Dynamic Island, etc.)",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.detection": "inferred",
      "ontology.css-env": "safe-area-inset-*"
    },
    "top": {
      "$value": "env(safe-area-inset-top)",
      "$type": "string",
      "$description": "Top safe area inset"
    },
    "right": {
      "$value": "env(safe-area-inset-right)",
      "$type": "string",
      "$description": "Right safe area inset"
    },
    "bottom": {
      "$value": "env(safe-area-inset-bottom)",
      "$type": "string",
      "$description": "Bottom safe area inset"
    },
    "left": {
      "$value": "env(safe-area-inset-left)",
      "$type": "string",
      "$description": "Left safe area inset"
    }
  },

  "display-cutout-type": {
    "$description": "Hardware display cutout classification",
    "$extensions": {
      "ontology.volatility": "immutable",
      "ontology.detection": "inferred",
      "ontology.platform-api": "Device-specific"
    },
    "none": {
      "$value": "none",
      "$type": "string",
      "$description": "No display cutout"
    },
    "notch": {
      "$value": "notch",
      "$type": "string",
      "$description": "Top-center notch (iPhone X-style)"
    },
    "dynamic-island": {
      "$value": "dynamic-island",
      "$type": "string",
      "$description": "Dynamic Island (iPhone 14 Pro+)"
    },
    "punch-hole": {
      "$value": "punch-hole",
      "$type": "string",
      "$description": "Punch-hole camera cutout"
    },
    "corner": {
      "$value": "corner",
      "$type": "string",
      "$description": "Corner camera cutout"
    }
  },

  "viewport-segment-count": {
    "$description": "Foldable device viewport segments",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "horizontal-viewport-segments, vertical-viewport-segments"
    },
    "1": {
      "$value": 1,
      "$type": "number",
      "$description": "Single viewport segment (standard)"
    },
    "2": {
      "$value": 2,
      "$type": "number",
      "$description": "Two viewport segments (dual-screen/fold)"
    },
    "3": {
      "$value": 3,
      "$type": "number",
      "$description": "Three viewport segments (rare)"
    }
  },

  "fold-posture": {
    "$description": "Foldable device physical state",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.detection": "inferred",
      "ontology.api": "Screen Fold API"
    },
    "flat": {
      "$value": "flat",
      "$type": "string",
      "$description": "Fully flat/open"
    },
    "half-opened": {
      "$value": "half-opened",
      "$type": "string",
      "$description": "Partially folded (laptop/tent mode)"
    },
    "folded": {
      "$value": "folded",
      "$type": "string",
      "$description": "Fully folded/closed"
    },
    "tabletop": {
      "$value": "tabletop",
      "$type": "string",
      "$description": "Horizontal fold (bottom as base)"
    },
    "book": {
      "$value": "book",
      "$type": "string",
      "$description": "Vertical fold (side-by-side)"
    }
  },

  "fold-occlusion": {
    "$description": "Fold area content obstruction",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.detection": "computed"
    },
    "none": {
      "$value": "none",
      "$type": "string",
      "$description": "No fold occlusion"
    },
    "partial": {
      "$value": "partial",
      "$type": "string",
      "$description": "Fold partially obscures content"
    },
    "full": {
      "$value": "full",
      "$type": "string",
      "$description": "Fold fully obscures content area"
    }
  },

  "virtual-keyboard-state": {
    "$description": "On-screen keyboard visibility",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.detection": "inferred",
      "ontology.css-env": "keyboard-inset-*"
    },
    "hidden": {
      "$value": "hidden",
      "$type": "string",
      "$description": "Virtual keyboard hidden"
    },
    "visible": {
      "$value": "visible",
      "$type": "string",
      "$description": "Virtual keyboard visible"
    },
    "transitioning": {
      "$value": "transitioning",
      "$type": "string",
      "$description": "Virtual keyboard animating in/out"
    }
  }
}
