{
  "$description": "Accessibility context dimensions - user preferences addressing visual, motor, and cognitive needs",

  "reduced-motion": {
    "$description": "User motion preference",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "prefers-reduced-motion"
    },
    "no-preference": {
      "$value": "no-preference",
      "$type": "string",
      "$description": "No motion preference (allow animations)"
    },
    "reduce": {
      "$value": "reduce",
      "$type": "string",
      "$description": "User prefers reduced motion"
    }
  },

  "reduced-transparency": {
    "$description": "User transparency preference",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "prefers-reduced-transparency"
    },
    "no-preference": {
      "$value": "no-preference",
      "$type": "string",
      "$description": "No transparency preference"
    },
    "reduce": {
      "$value": "reduce",
      "$type": "string",
      "$description": "User prefers reduced transparency (solid backgrounds)"
    }
  },

  "reduced-data": {
    "$description": "User data usage preference",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "prefers-reduced-data"
    },
    "no-preference": {
      "$value": "no-preference",
      "$type": "string",
      "$description": "No data usage preference"
    },
    "reduce": {
      "$value": "reduce",
      "$type": "string",
      "$description": "User prefers reduced data usage"
    }
  },

  "cvd-safe-mode": {
    "$description": "Color vision deficiency safe mode",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared"
    },
    "none": {
      "$value": "none",
      "$type": "string",
      "$description": "Standard color palette"
    },
    "protanopia-safe": {
      "$value": "protanopia-safe",
      "$type": "string",
      "$description": "Safe for protanopia (red-blind)"
    },
    "deuteranopia-safe": {
      "$value": "deuteranopia-safe",
      "$type": "string",
      "$description": "Safe for deuteranopia (green-blind)"
    },
    "tritanopia-safe": {
      "$value": "tritanopia-safe",
      "$type": "string",
      "$description": "Safe for tritanopia (blue-blind)"
    },
    "universal": {
      "$value": "universal",
      "$type": "string",
      "$description": "Universal CVD-safe palette"
    }
  },

  "cognitive-load": {
    "$description": "Cognitive accessibility preference",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared"
    },
    "default": {
      "$value": "default",
      "$type": "string",
      "$description": "Standard cognitive load"
    },
    "reduced": {
      "$value": "reduced",
      "$type": "string",
      "$description": "Reduced cognitive load (simplified UI)"
    }
  },

  "focus-visibility": {
    "$description": "Focus indicator visibility preference",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared"
    },
    "default": {
      "$value": "default",
      "$type": "string",
      "$description": "Standard focus indicators"
    },
    "enhanced": {
      "$value": "enhanced",
      "$type": "string",
      "$description": "Enhanced focus indicators (larger, higher contrast)"
    }
  },

  "pointer-target-size": {
    "$description": "Interactive target size preference",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "declared"
    },
    "default": {
      "$value": "default",
      "$type": "string",
      "$description": "Standard target sizes"
    },
    "large": {
      "$value": "large",
      "$type": "string",
      "$description": "Large targets (44px minimum)"
    }
  },

  "screen-magnification": {
    "$description": "Screen magnifier active state",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.detection": "inferred",
      "ontology.platform-api": "Accessibility API"
    },
    "inactive": {
      "$value": false,
      "$type": "boolean",
      "$description": "Screen magnifier not active"
    },
    "active": {
      "$value": true,
      "$type": "boolean",
      "$description": "Screen magnifier active"
    }
  }
}
