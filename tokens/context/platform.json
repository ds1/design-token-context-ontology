{
  "$description": "Platform context dimensions - deployment target, rendering environment, and runtime capabilities",

  "platform": {
    "$description": "Target platform / runtime",
    "$extensions": {
      "ontology.volatility": "immutable",
      "ontology.detection": "declared"
    },
    "web": {
      "$value": "web",
      "$type": "string",
      "$description": "Web browser"
    },
    "ios": {
      "$value": "ios",
      "$type": "string",
      "$description": "iOS native"
    },
    "android": {
      "$value": "android",
      "$type": "string",
      "$description": "Android native"
    },
    "macos": {
      "$value": "macos",
      "$type": "string",
      "$description": "macOS native"
    },
    "windows": {
      "$value": "windows",
      "$type": "string",
      "$description": "Windows native"
    },
    "linux": {
      "$value": "linux",
      "$type": "string",
      "$description": "Linux native"
    },
    "electron": {
      "$value": "electron",
      "$type": "string",
      "$description": "Electron desktop app"
    },
    "tauri": {
      "$value": "tauri",
      "$type": "string",
      "$description": "Tauri desktop app"
    },
    "react-native": {
      "$value": "react-native",
      "$type": "string",
      "$description": "React Native mobile"
    }
  },

  "framework": {
    "$description": "UI framework",
    "$extensions": {
      "ontology.volatility": "immutable",
      "ontology.detection": "declared"
    },
    "react": {
      "$value": "react",
      "$type": "string",
      "$description": "React framework"
    },
    "angular": {
      "$value": "angular",
      "$type": "string",
      "$description": "Angular framework"
    },
    "vue": {
      "$value": "vue",
      "$type": "string",
      "$description": "Vue.js framework"
    },
    "svelte": {
      "$value": "svelte",
      "$type": "string",
      "$description": "Svelte framework"
    },
    "web-components": {
      "$value": "web-components",
      "$type": "string",
      "$description": "Native Web Components"
    }
  },

  "browser-engine": {
    "$description": "Browser rendering engine",
    "$extensions": {
      "ontology.volatility": "immutable",
      "ontology.detection": "inferred"
    },
    "webkit": {
      "$value": "webkit",
      "$type": "string",
      "$description": "WebKit (Safari)"
    },
    "gecko": {
      "$value": "gecko",
      "$type": "string",
      "$description": "Gecko (Firefox)"
    },
    "blink": {
      "$value": "blink",
      "$type": "string",
      "$description": "Blink (Chrome, Edge)"
    }
  },

  "rendering-context": {
    "$description": "Server/client rendering mode",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.detection": "inferred"
    },
    "ssr": {
      "$value": "ssr",
      "$type": "string",
      "$description": "Server-side rendering"
    },
    "ssg": {
      "$value": "ssg",
      "$type": "string",
      "$description": "Static site generation"
    },
    "isr": {
      "$value": "isr",
      "$type": "string",
      "$description": "Incremental static regeneration"
    },
    "csr": {
      "$value": "csr",
      "$type": "string",
      "$description": "Client-side rendering"
    },
    "hydrating": {
      "$value": "hydrating",
      "$type": "string",
      "$description": "SSR â†’ CSR transition state"
    }
  },

  "javascript-state": {
    "$description": "JavaScript availability",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.detection": "inferred"
    },
    "enabled": {
      "$value": "enabled",
      "$type": "string",
      "$description": "JavaScript enabled and executed"
    },
    "disabled": {
      "$value": "disabled",
      "$type": "string",
      "$description": "JavaScript disabled"
    },
    "loading": {
      "$value": "loading",
      "$type": "string",
      "$description": "JavaScript loading / not yet executed"
    }
  },

  "performance-tier": {
    "$description": "Device performance classification",
    "$extensions": {
      "ontology.volatility": "immutable",
      "ontology.detection": "computed"
    },
    "high": {
      "$value": "high",
      "$type": "string",
      "$description": "High-performance device"
    },
    "medium": {
      "$value": "medium",
      "$type": "string",
      "$description": "Medium-performance device"
    },
    "low": {
      "$value": "low",
      "$type": "string",
      "$description": "Low-performance device"
    }
  },

  "network-quality": {
    "$description": "Connection speed tier",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.detection": "inferred",
      "ontology.api": "Network Information API"
    },
    "offline": {
      "$value": "offline",
      "$type": "string",
      "$description": "No network connection"
    },
    "slow-2g": {
      "$value": "slow-2g",
      "$type": "string",
      "$description": "Very slow connection"
    },
    "2g": {
      "$value": "2g",
      "$type": "string",
      "$description": "2G connection"
    },
    "3g": {
      "$value": "3g",
      "$type": "string",
      "$description": "3G connection"
    },
    "4g-plus": {
      "$value": "4g+",
      "$type": "string",
      "$description": "4G or better"
    }
  },

  "print-context": {
    "$description": "Screen vs print media",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.detection": "inferred",
      "ontology.css-query": "@media print"
    },
    "screen": {
      "$value": "screen",
      "$type": "string",
      "$description": "Screen display"
    },
    "print": {
      "$value": "print",
      "$type": "string",
      "$description": "Print media"
    }
  },

  "embedded-context": {
    "$description": "Runtime embedding type",
    "$extensions": {
      "ontology.volatility": "immutable",
      "ontology.detection": "inferred"
    },
    "standalone": {
      "$value": "standalone",
      "$type": "string",
      "$description": "Standalone application/page"
    },
    "iframe": {
      "$value": "iframe",
      "$type": "string",
      "$description": "Embedded in iframe"
    },
    "webview": {
      "$value": "webview",
      "$type": "string",
      "$description": "Embedded in native webview"
    }
  }
}
