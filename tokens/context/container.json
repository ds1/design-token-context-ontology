{
  "$description": "Container context dimensions - component-level responsive adaptation",

  "container-width": {
    "$description": "Container inline-size breakpoints",
    "$extensions": {
      "ontology.volatility": "inherited",
      "ontology.detection": "inferred",
      "ontology.css-query": "@container (width)"
    },
    "xs": {
      "$value": 0,
      "$type": "dimension",
      "$description": "Extra small container: 0-199px"
    },
    "sm": {
      "$value": 200,
      "$type": "dimension",
      "$description": "Small container: 200-399px"
    },
    "md": {
      "$value": 400,
      "$type": "dimension",
      "$description": "Medium container: 400-599px"
    },
    "lg": {
      "$value": 600,
      "$type": "dimension",
      "$description": "Large container: 600-799px"
    },
    "xl": {
      "$value": 800,
      "$type": "dimension",
      "$description": "Extra large container: 800px+"
    }
  },

  "container-aspect-ratio": {
    "$description": "Container aspect ratio classification",
    "$extensions": {
      "ontology.volatility": "inherited",
      "ontology.detection": "computed"
    },
    "ultrawide": {
      "$value": "21/9",
      "$type": "string",
      "$description": "Ultrawide (21:9)"
    },
    "wide": {
      "$value": "16/9",
      "$type": "string",
      "$description": "Wide (16:9)"
    },
    "standard": {
      "$value": "4/3",
      "$type": "string",
      "$description": "Standard (4:3)"
    },
    "square": {
      "$value": "1/1",
      "$type": "string",
      "$description": "Square (1:1)"
    },
    "portrait": {
      "$value": "3/4",
      "$type": "string",
      "$description": "Portrait (3:4)"
    },
    "tall": {
      "$value": "9/16",
      "$type": "string",
      "$description": "Tall (9:16)"
    }
  },

  "content-overflow": {
    "$description": "Content overflow state",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.detection": "inferred"
    },
    "within-bounds": {
      "$value": "within-bounds",
      "$type": "string",
      "$description": "Content fits within container"
    },
    "overflowing-x": {
      "$value": "overflowing-x",
      "$type": "string",
      "$description": "Content overflows horizontally"
    },
    "overflowing-y": {
      "$value": "overflowing-y",
      "$type": "string",
      "$description": "Content overflows vertically"
    }
  },

  "scroll-state": {
    "$description": "Container scroll position state",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.detection": "inferred",
      "ontology.css-query": "@container scroll-state()"
    },
    "at-top": {
      "$value": "at-top",
      "$type": "string",
      "$description": "Scrolled to top"
    },
    "at-bottom": {
      "$value": "at-bottom",
      "$type": "string",
      "$description": "Scrolled to bottom"
    },
    "scrolling": {
      "$value": "scrolling",
      "$type": "string",
      "$description": "Currently scrolling"
    },
    "at-snappoint": {
      "$value": "at-snappoint",
      "$type": "string",
      "$description": "Resting at scroll snap point"
    }
  }
}
