{
  "$description": "Named context types - common dimension intersections for governed shortcuts",

  "mobile-light": {
    "$description": "Mobile web default (light scheme)",
    "$extensions": {
      "ontology.dimensions": {
        "viewport.breakpoint": "<=sm",
        "appearance.color-scheme": "light",
        "density.touch-optimization": "touch-optimized"
      }
    },
    "breakpoint-max": {
      "$value": 576,
      "$type": "dimension"
    },
    "color-scheme": {
      "$value": "light",
      "$type": "string"
    },
    "touch-optimized": {
      "$value": true,
      "$type": "boolean"
    }
  },

  "mobile-dark": {
    "$description": "Mobile web dark mode",
    "$extensions": {
      "ontology.dimensions": {
        "viewport.breakpoint": "<=sm",
        "appearance.color-scheme": "dark",
        "density.touch-optimization": "touch-optimized"
      }
    },
    "breakpoint-max": {
      "$value": 576,
      "$type": "dimension"
    },
    "color-scheme": {
      "$value": "dark",
      "$type": "string"
    },
    "touch-optimized": {
      "$value": true,
      "$type": "boolean"
    }
  },

  "desktop-compact": {
    "$description": "Desktop productivity application",
    "$extensions": {
      "ontology.dimensions": {
        "viewport.breakpoint": ">=lg",
        "density.density-mode": "compact"
      }
    },
    "breakpoint-min": {
      "$value": 992,
      "$type": "dimension"
    },
    "density-mode": {
      "$value": "compact",
      "$type": "string"
    }
  },

  "desktop-comfortable": {
    "$description": "Desktop consumer application",
    "$extensions": {
      "ontology.dimensions": {
        "viewport.breakpoint": ">=lg",
        "density.density-mode": "comfortable"
      }
    },
    "breakpoint-min": {
      "$value": 992,
      "$type": "dimension"
    },
    "density-mode": {
      "$value": "comfortable",
      "$type": "string"
    }
  },

  "kiosk": {
    "$description": "Public terminal / kiosk mode",
    "$extensions": {
      "ontology.dimensions": {
        "viewport.display-mode": "fullscreen",
        "density.touch-optimization": "touch-optimized",
        "accessibility.pointer-target-size": "large"
      }
    },
    "display-mode": {
      "$value": "fullscreen",
      "$type": "string"
    },
    "touch-optimized": {
      "$value": true,
      "$type": "boolean"
    },
    "min-target-size": {
      "$value": 44,
      "$type": "dimension"
    }
  },

  "print": {
    "$description": "Print stylesheet context",
    "$extensions": {
      "ontology.dimensions": {
        "platform.print-context": "print",
        "appearance.color-scheme": "light",
        "elevation.print-elevation": "border"
      }
    },
    "media": {
      "$value": "print",
      "$type": "string"
    },
    "color-scheme": {
      "$value": "light",
      "$type": "string"
    },
    "elevation-style": {
      "$value": "border",
      "$type": "string"
    }
  },

  "high-contrast-dark": {
    "$description": "Windows high contrast dark theme",
    "$extensions": {
      "ontology.dimensions": {
        "accessibility.forced-colors": "active",
        "appearance.color-scheme": "dark"
      }
    },
    "forced-colors": {
      "$value": true,
      "$type": "boolean"
    },
    "color-scheme": {
      "$value": "dark",
      "$type": "string"
    }
  },

  "high-contrast-light": {
    "$description": "Windows high contrast light theme",
    "$extensions": {
      "ontology.dimensions": {
        "accessibility.forced-colors": "active",
        "appearance.color-scheme": "light"
      }
    },
    "forced-colors": {
      "$value": true,
      "$type": "boolean"
    },
    "color-scheme": {
      "$value": "light",
      "$type": "string"
    }
  },

  "reduced-motion": {
    "$description": "Motion-sensitive users",
    "$extensions": {
      "ontology.dimensions": {
        "accessibility.reduced-motion": "reduce"
      }
    },
    "prefers-reduced-motion": {
      "$value": true,
      "$type": "boolean"
    }
  },

  "foldable-split": {
    "$description": "Foldable device in split view",
    "$extensions": {
      "ontology.dimensions": {
        "viewport.viewport-segment-count": 2,
        "viewport.fold-posture": "flat"
      }
    },
    "segment-count": {
      "$value": 2,
      "$type": "number"
    },
    "fold-posture": {
      "$value": "flat",
      "$type": "string"
    }
  },

  "foldable-tabletop": {
    "$description": "Foldable in tabletop mode (half-folded horizontal)",
    "$extensions": {
      "ontology.dimensions": {
        "viewport.fold-posture": "tabletop"
      }
    },
    "fold-posture": {
      "$value": "tabletop",
      "$type": "string"
    }
  },

  "rtl-compact": {
    "$description": "RTL productivity application",
    "$extensions": {
      "ontology.dimensions": {
        "locale.text-direction": "rtl",
        "density.density-mode": "compact"
      }
    },
    "text-direction": {
      "$value": "rtl",
      "$type": "string"
    },
    "density-mode": {
      "$value": "compact",
      "$type": "string"
    }
  },

  "cvd-universal": {
    "$description": "Color vision deficiency safe mode",
    "$extensions": {
      "ontology.dimensions": {
        "accessibility.cvd-safe-mode": "universal"
      }
    },
    "cvd-mode": {
      "$value": "universal",
      "$type": "string"
    }
  }
}
