{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "name": "Design Token Context Ontology",
  "version": "1.0.0",
  "description": "Comprehensive context ontology for multi-dimensional token resolution",

  "layers": {
    "context": {
      "description": "Environment layer - detected automatically, read-only",
      "files": [
        "context/appearance.json",
        "context/density.json",
        "context/viewport.json",
        "context/container.json",
        "context/accessibility.json",
        "context/locale.json",
        "context/platform.json",
        "context/types.json"
      ]
    },
    "preference": {
      "description": "User settings layer - user-controllable, system-detectable",
      "files": [
        "preference/appearance.json",
        "preference/density.json",
        "preference/accessibility.json"
      ]
    },
    "semantic": {
      "description": "Design intent layer - author-defined, context-independent",
      "files": [
        "semantic/color.json",
        "semantic/typography.json",
        "semantic/spacing.json",
        "semantic/elevation.json",
        "semantic/status.json",
        "semantic/emphasis.json"
      ]
    },
    "state": {
      "description": "Interaction layer - runtime-dynamic, composable",
      "files": [
        "state/interaction.json",
        "state/combinable.json"
      ]
    },
    "component": {
      "description": "Implementation layer - references semantic layer only",
      "files": [
        "component/button.json"
      ]
    }
  },

  "statistics": {
    "total_files": 19,
    "context_dimensions": 93,
    "context_types": 12,
    "semantic_tokens": 150,
    "state_tokens": 45,
    "component_tokens": 35
  },

  "gitfig": {
    "description": "GitFig plugin integration configuration",
    "format": "w3c",
    "suggested_mappings": [
      {
        "file_path": "semantic/color.json",
        "target_type": "variables",
        "target_name": "Colors"
      },
      {
        "file_path": "semantic/typography.json",
        "target_type": "variables",
        "target_name": "Typography"
      },
      {
        "file_path": "semantic/spacing.json",
        "target_type": "variables",
        "target_name": "Spacing"
      },
      {
        "file_path": "semantic/elevation.json",
        "target_type": "variables",
        "target_name": "Elevation"
      },
      {
        "file_path": "semantic/status.json",
        "target_type": "variables",
        "target_name": "Status"
      },
      {
        "file_path": "semantic/emphasis.json",
        "target_type": "variables",
        "target_name": "Emphasis"
      },
      {
        "file_path": "state/interaction.json",
        "target_type": "variables",
        "target_name": "Interaction States"
      },
      {
        "file_path": "state/combinable.json",
        "target_type": "variables",
        "target_name": "Combinable States"
      },
      {
        "file_path": "component/button.json",
        "target_type": "variables",
        "target_name": "Button"
      }
    ]
  },

  "ontology": {
    "volatility_classes": ["immutable", "stable", "semi-stable", "volatile", "inherited"],
    "detection_mechanisms": ["inferred", "declared", "computed"],
    "resolution_precedence": [
      "accessibility_overrides",
      "explicit_declarations",
      "context_type",
      "inherited_context",
      "platform_defaults",
      "system_defaults"
    ]
  }
}
