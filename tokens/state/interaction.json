{
  "$description": "Interaction state tokens - mutually exclusive input-driven states",

  "rest": {
    "$description": "Rest/default state",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.css-pseudo": "(default)",
      "ontology.exclusive-group": "interaction"
    },
    "opacity": {
      "$value": 1,
      "$type": "number",
      "$description": "Rest state opacity"
    },
    "scale": {
      "$value": 1,
      "$type": "number",
      "$description": "Rest state scale"
    },
    "cursor": {
      "$value": "default",
      "$type": "string",
      "$description": "Rest state cursor"
    }
  },

  "hover": {
    "$description": "Hover/pointer-over state",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.css-pseudo": ":hover",
      "ontology.exclusive-group": "interaction"
    },
    "opacity": {
      "$value": 1,
      "$type": "number",
      "$description": "Hover state opacity"
    },
    "overlay": {
      "$value": "rgba(0, 0, 0, 0.04)",
      "$type": "color",
      "$description": "Hover overlay color",
      "$extensions": {
        "mode": {
          "dark": "rgba(255, 255, 255, 0.08)"
        }
      }
    },
    "cursor": {
      "$value": "pointer",
      "$type": "string",
      "$description": "Hover cursor for interactive elements"
    },
    "transition-duration": {
      "$value": "150ms",
      "$type": "string",
      "$description": "Hover transition duration"
    }
  },

  "active": {
    "$description": "Active/pressed state",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.css-pseudo": ":active",
      "ontology.exclusive-group": "interaction"
    },
    "opacity": {
      "$value": 1,
      "$type": "number",
      "$description": "Active state opacity"
    },
    "overlay": {
      "$value": "rgba(0, 0, 0, 0.08)",
      "$type": "color",
      "$description": "Active overlay color",
      "$extensions": {
        "mode": {
          "dark": "rgba(255, 255, 255, 0.12)"
        }
      }
    },
    "scale": {
      "$value": 0.98,
      "$type": "number",
      "$description": "Active state scale (subtle press effect)"
    },
    "elevation-change": {
      "$value": -1,
      "$type": "number",
      "$description": "Elevation decrease on press (Material pattern)"
    }
  },

  "disabled": {
    "$description": "Disabled/unavailable state",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.css-pseudo": ":disabled, [aria-disabled='true']",
      "ontology.aria": "aria-disabled",
      "ontology.exclusive-group": "interaction"
    },
    "opacity": {
      "$value": 0.5,
      "$type": "number",
      "$description": "Disabled state opacity"
    },
    "cursor": {
      "$value": "not-allowed",
      "$type": "string",
      "$description": "Disabled cursor"
    },
    "pointer-events": {
      "$value": "none",
      "$type": "string",
      "$description": "Disable pointer events"
    },
    "foreground": {
      "$value": "#adb5bd",
      "$type": "color",
      "$description": "Disabled text color",
      "$extensions": {
        "mode": {
          "dark": "#495057"
        }
      }
    }
  },

  "pending": {
    "$description": "Pending/loading state",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.aria": "aria-busy",
      "ontology.exclusive-group": "interaction"
    },
    "opacity": {
      "$value": 0.7,
      "$type": "number",
      "$description": "Pending state opacity"
    },
    "cursor": {
      "$value": "wait",
      "$type": "string",
      "$description": "Pending cursor"
    },
    "animation": {
      "$value": "pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite",
      "$type": "string",
      "$description": "Pending animation"
    }
  },

  "dragged": {
    "$description": "Being dragged state",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.exclusive-group": "interaction"
    },
    "opacity": {
      "$value": 0.8,
      "$type": "number",
      "$description": "Dragged state opacity"
    },
    "scale": {
      "$value": 1.02,
      "$type": "number",
      "$description": "Slight scale up when dragged"
    },
    "cursor": {
      "$value": "grabbing",
      "$type": "string",
      "$description": "Dragging cursor"
    },
    "shadow": {
      "$value": "0 10px 20px rgba(0,0,0,0.15)",
      "$type": "shadow",
      "$description": "Elevated shadow when dragged"
    }
  },

  "skeleton": {
    "$description": "Skeleton/placeholder state",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.aria": "aria-hidden",
      "ontology.exclusive-group": "interaction"
    },
    "background": {
      "$value": "#e9ecef",
      "$type": "color",
      "$description": "Skeleton background",
      "$extensions": {
        "mode": {
          "dark": "#343a40"
        }
      }
    },
    "animation": {
      "$value": "shimmer 2s ease-in-out infinite",
      "$type": "string",
      "$description": "Skeleton shimmer animation"
    },
    "border-radius": {
      "$value": 4,
      "$type": "dimension",
      "$description": "Skeleton corner radius"
    }
  }
}
