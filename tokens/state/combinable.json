{
  "$description": "Combinable state tokens - additive states that can be applied simultaneously",

  "focus": {
    "$description": "Focus state (additive overlay on interaction states)",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.css-pseudo": ":focus, :focus-visible",
      "ontology.combinable": true
    },
    "ring-color": {
      "$value": "#0d6efd",
      "$type": "color",
      "$description": "Focus ring color",
      "$extensions": {
        "mode": {
          "dark": "#6ea8fe"
        }
      }
    },
    "ring-width": {
      "$value": 2,
      "$type": "dimension",
      "$description": "Focus ring width"
    },
    "ring-offset": {
      "$value": 2,
      "$type": "dimension",
      "$description": "Focus ring offset from element"
    },
    "ring-style": {
      "$value": "solid",
      "$type": "string",
      "$description": "Focus ring style"
    },
    "outline": {
      "$value": "2px solid #0d6efd",
      "$type": "string",
      "$description": "Focus outline shorthand"
    }
  },

  "focus-visible": {
    "$description": "Keyboard-only focus (more prominent)",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.css-pseudo": ":focus-visible",
      "ontology.combinable": true
    },
    "ring-width": {
      "$value": 3,
      "$type": "dimension",
      "$description": "Focus-visible ring width (larger)"
    },
    "ring-offset": {
      "$value": 2,
      "$type": "dimension",
      "$description": "Focus-visible ring offset"
    }
  },

  "focus-within": {
    "$description": "Container has focused descendant",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.css-pseudo": ":focus-within",
      "ontology.combinable": true
    },
    "border-color": {
      "$value": "#0d6efd",
      "$type": "color",
      "$description": "Border color when containing focus",
      "$extensions": {
        "mode": {
          "dark": "#6ea8fe"
        }
      }
    }
  },

  "selected": {
    "$description": "Selected state (listbox, tabs, grid cells)",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.aria": "aria-selected",
      "ontology.combinable": true
    },
    "background": {
      "$value": "#cfe2ff",
      "$type": "color",
      "$description": "Selected background",
      "$extensions": {
        "mode": {
          "dark": "#1a3a5c"
        }
      }
    },
    "foreground": {
      "$value": "#0a58ca",
      "$type": "color",
      "$description": "Selected text color",
      "$extensions": {
        "mode": {
          "dark": "#9ec5fe"
        }
      }
    },
    "border-color": {
      "$value": "#0d6efd",
      "$type": "color",
      "$description": "Selected border color",
      "$extensions": {
        "mode": {
          "dark": "#6ea8fe"
        }
      }
    }
  },

  "checked": {
    "$description": "Checked state (checkboxes, switches, radios)",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.aria": "aria-checked",
      "ontology.combinable": true
    },
    "background": {
      "$value": "#0d6efd",
      "$type": "color",
      "$description": "Checked background",
      "$extensions": {
        "mode": {
          "dark": "#0d6efd"
        }
      }
    },
    "foreground": {
      "$value": "#ffffff",
      "$type": "color",
      "$description": "Checked indicator color"
    },
    "border-color": {
      "$value": "#0d6efd",
      "$type": "color",
      "$description": "Checked border color"
    }
  },

  "indeterminate": {
    "$description": "Indeterminate state (partial selection)",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.aria": "aria-checked='mixed'",
      "ontology.combinable": true
    },
    "background": {
      "$value": "#0d6efd",
      "$type": "color",
      "$description": "Indeterminate background"
    },
    "indicator": {
      "$value": "#ffffff",
      "$type": "color",
      "$description": "Indeterminate indicator (minus/dash)"
    }
  },

  "expanded": {
    "$description": "Expanded state (accordions, menus, trees)",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.aria": "aria-expanded",
      "ontology.combinable": true
    },
    "icon-rotation": {
      "$value": 180,
      "$type": "number",
      "$description": "Expand icon rotation (degrees)"
    },
    "transition-duration": {
      "$value": "200ms",
      "$type": "string",
      "$description": "Expand animation duration"
    }
  },

  "current": {
    "$description": "Current location state (navigation)",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.aria": "aria-current",
      "ontology.combinable": true
    },
    "background": {
      "$value": "#e7f1ff",
      "$type": "color",
      "$description": "Current item background",
      "$extensions": {
        "mode": {
          "dark": "#1a3a5c"
        }
      }
    },
    "foreground": {
      "$value": "#0d6efd",
      "$type": "color",
      "$description": "Current item text",
      "$extensions": {
        "mode": {
          "dark": "#6ea8fe"
        }
      }
    },
    "indicator-color": {
      "$value": "#0d6efd",
      "$type": "color",
      "$description": "Current indicator color",
      "$extensions": {
        "mode": {
          "dark": "#6ea8fe"
        }
      }
    },
    "indicator-width": {
      "$value": 3,
      "$type": "dimension",
      "$description": "Current indicator width"
    }
  },

  "invalid": {
    "$description": "Invalid/validation error state",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.aria": "aria-invalid",
      "ontology.css-pseudo": ":invalid",
      "ontology.combinable": true
    },
    "border-color": {
      "$value": "#dc3545",
      "$type": "color",
      "$description": "Invalid border color"
    },
    "background": {
      "$value": "#fff5f5",
      "$type": "color",
      "$description": "Invalid background tint",
      "$extensions": {
        "mode": {
          "dark": "#2c1215"
        }
      }
    },
    "icon-color": {
      "$value": "#dc3545",
      "$type": "color",
      "$description": "Invalid icon color"
    }
  },

  "required": {
    "$description": "Required field state",
    "$extensions": {
      "ontology.volatility": "stable",
      "ontology.aria": "aria-required",
      "ontology.combinable": true
    },
    "indicator": {
      "$value": "*",
      "$type": "string",
      "$description": "Required indicator character"
    },
    "indicator-color": {
      "$value": "#dc3545",
      "$type": "color",
      "$description": "Required indicator color"
    }
  },

  "read-only": {
    "$description": "Read-only state",
    "$extensions": {
      "ontology.volatility": "semi-stable",
      "ontology.aria": "aria-readonly",
      "ontology.combinable": true
    },
    "background": {
      "$value": "#f8f9fa",
      "$type": "color",
      "$description": "Read-only background",
      "$extensions": {
        "mode": {
          "dark": "#212529"
        }
      }
    },
    "cursor": {
      "$value": "default",
      "$type": "string",
      "$description": "Read-only cursor"
    }
  },

  "loading": {
    "$description": "Loading/busy state for regions",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.aria": "aria-busy",
      "ontology.combinable": true
    },
    "opacity": {
      "$value": 0.6,
      "$type": "number",
      "$description": "Loading content opacity"
    },
    "overlay": {
      "$value": "rgba(255, 255, 255, 0.8)",
      "$type": "color",
      "$description": "Loading overlay",
      "$extensions": {
        "mode": {
          "dark": "rgba(0, 0, 0, 0.8)"
        }
      }
    }
  },

  "modified": {
    "$description": "Modified/dirty state (unsaved changes)",
    "$extensions": {
      "ontology.volatility": "volatile",
      "ontology.combinable": true
    },
    "indicator-color": {
      "$value": "#ffc107",
      "$type": "color",
      "$description": "Modified indicator color"
    },
    "border-color": {
      "$value": "#ffc107",
      "$type": "color",
      "$description": "Modified border accent"
    }
  }
}
