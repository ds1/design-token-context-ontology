    "muted": {
      "$value": "#6c757d",
      "$type": "color",
      "$description": "Muted/secondary text",
      "$extensions": {
        "mode": {
          "dark": "#adb5bd"
        }
      }
    },
    "subtle": {
      "$value": "#adb5bd",
      "$type": "color",
      "$description": "Subtle/tertiary text",
      "$extensions": {
        "mode": {
          "dark": "#6c757d"
        }
      }
    },
    "inverse": {
      "$value": "#ffffff",
      "$type": "color",
      "$description": "Inverse text (for dark backgrounds)",
      "$extensions": {
        "mode": {
          "dark": "#212529"
