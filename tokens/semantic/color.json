{
  "$description": "Semantic color tokens - design intent colors with contextual resolution",

  "surface": {
    "$description": "Surface/background colors",
    "default": {
      "$value": "#ffffff",
      "$type": "color",
      "$description": "Default surface color",
      "$extensions": {
        "mode": {
          "dark": "#121212"
        }
      }
    },
    "subtle": {
      "$value": "#f8f9fa",
      "$type": "color",
      "$description": "Subtle surface for secondary areas",
      "$extensions": {
        "mode": {
          "dark": "#1e1e1e"
        }
      }
    },
    "muted": {
      "$value": "#f1f3f5",
      "$type": "color",
      "$description": "Muted surface for tertiary areas",
      "$extensions": {
        "mode": {
          "dark": "#2d2d2d"
        }
      }
    },
    "emphasis": {
      "$value": "#e9ecef",
      "$type": "color",
      "$description": "Emphasized surface",
      "$extensions": {
        "mode": {
          "dark": "#3d3d3d"
        }
      }
    },
    "inverse": {
      "$value": "#212529",
      "$type": "color",
      "$description": "Inverse surface (dark on light, light on dark)",
      "$extensions": {
        "mode": {
          "dark": "#f8f9fa"
        }
      }
    }
  },

  "foreground": {
    "$description": "Text and icon colors",
