{
  "$description": "Emphasis semantic tokens - visual hierarchy through importance levels",

  "primary": {
    "$description": "Primary emphasis (highest importance)",
    "background": {
      "$value": "#0d6efd",
      "$type": "color",
      "$description": "Primary emphasis background",
      "$extensions": {
        "mode": {
          "dark": "#0d6efd"
        }
      }
    },
    "foreground": {
      "$value": "#ffffff",
      "$type": "color",
      "$description": "Primary emphasis text",
      "$extensions": {
        "mode": {
          "dark": "#ffffff"
        }
      }
    },
    "border": {
      "$value": "#0d6efd",
      "$type": "color",
      "$description": "Primary emphasis border",
      "$extensions": {
        "mode": {
          "dark": "#0d6efd"
        }
      }
    }
  },

  "secondary": {
    "$description": "Secondary emphasis",
    "background": {
      "$value": "#6c757d",
      "$type": "color",
      "$description": "Secondary emphasis background",
      "$extensions": {
        "mode": {
          "dark": "#6c757d"
        }
      }
    },
    "foreground": {
      "$value": "#ffffff",
      "$type": "color",
