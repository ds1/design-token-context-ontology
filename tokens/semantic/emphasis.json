      "$value": "transparent",
      "$type": "color",
      "$description": "Tertiary emphasis background"
    },
    "foreground": {
      "$value": "#0d6efd",
      "$type": "color",
      "$description": "Tertiary emphasis text",
      "$extensions": {
        "mode": {
          "dark": "#6ea8fe"
