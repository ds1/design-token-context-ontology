{
  "$description": "Elevation semantic tokens - visual hierarchy through layering and shadows",

  "surface": {
    "$description": "Surface level colors (tonal elevation)",
    "level-0": {
      "$value": "#ffffff",
      "$type": "color",
      "$description": "Base surface (ground level)",
      "$extensions": {
        "mode": {
          "dark": "#121212"
        }
      }
    },
    "level-1": {
      "$value": "#f8f9fa",
      "$type": "color",
      "$description": "Elevated surface level 1",
      "$extensions": {
        "mode": {
          "dark": "#1e1e1e"
        }
      }
    },
    "level-2": {
      "$value": "#f1f3f5",
      "$type": "color",
      "$description": "Elevated surface level 2",
      "$extensions": {
        "mode": {
          "dark": "#232323"
        }
      }
    },
    "level-3": {
      "$value": "#e9ecef",
      "$type": "color",
      "$description": "Elevated surface level 3",
      "$extensions": {
        "mode": {
          "dark": "#282828"
        }
      }
    },
    "level-4": {
      "$value": "#dee2e6",
      "$type": "color",
      "$description": "Elevated surface level 4",
      "$extensions": {
        "mode": {
          "dark": "#2d2d2d"
        }
      }
    },
    "level-5": {
      "$value": "#ced4da",
      "$type": "color",
      "$description": "Elevated surface level 5 (highest)",
      "$extensions": {
        "mode": {
          "dark": "#323232"
        }
      }
    }
  },

  "shadow": {
    "$description": "Shadow definitions for elevation",
    "none": {
      "$value": "none",
      "$type": "shadow",
      "$description": "No shadow"
    },
    "sm": {
      "$value": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "$type": "shadow",
      "$description": "Small shadow (level 1)"
    },
    "md": {
      "$value": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "$type": "shadow",
      "$description": "Medium shadow (level 2-3)"
    },
    "lg": {
      "$value": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "$type": "shadow",
      "$description": "Large shadow (level 4)"
    },
    "xl": {
      "$value": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "$type": "shadow",
      "$description": "Extra large shadow (level 5)"
    },
    "inner": {
      "$value": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)",
      "$type": "shadow",
      "$description": "Inset shadow for pressed states"
    }
  },

  "z-index": {
    "$description": "Z-index layers for stacking context",
    "base": {
      "$value": 0,
      "$type": "number",
      "$description": "Base layer (content)"
    },
    "dropdown": {
      "$value": 100,
      "$type": "number",
      "$description": "Dropdown menus"
    },
    "sticky": {
      "$value": 200,
      "$type": "number",
      "$description": "Sticky elements (headers)"
    },
    "overlay": {
      "$value": 300,
      "$type": "number",
      "$description": "Overlays and scrims"
    },
    "modal": {
      "$value": 400,
      "$type": "number",
      "$description": "Modal dialogs"
    },
    "popover": {
      "$value": 500,
      "$type": "number",
      "$description": "Popovers"
    },
    "toast": {
      "$value": 600,
      "$type": "number",
      "$description": "Toast notifications"
    },
    "tooltip": {
      "$value": 700,
      "$type": "number",
      "$description": "Tooltips"
    },
    "max": {
      "$value": 9999,
      "$type": "number",
      "$description": "Maximum z-index (system critical)"
    }
  },

  "backdrop": {
    "$description": "Backdrop/scrim styles",
    "blur": {
      "none": {
        "$value": "0px",
        "$type": "dimension",
        "$description": "No blur"
      },
      "sm": {
        "$value": "4px",
        "$type": "dimension",
        "$description": "Subtle blur"
      },
      "md": {
        "$value": "8px",
        "$type": "dimension",
        "$description": "Medium blur"
      },
      "lg": {
        "$value": "16px",
        "$type": "dimension",
        "$description": "Strong blur"
      }
    },
    "opacity": {
      "light": {
        "$value": "rgba(255, 255, 255, 0.7)",
        "$type": "color",
        "$description": "Light backdrop overlay"
      },
      "dark": {
        "$value": "rgba(0, 0, 0, 0.5)",
        "$type": "color",
        "$description": "Dark backdrop overlay"
      },
      "heavy": {
        "$value": "rgba(0, 0, 0, 0.8)",
        "$type": "color",
        "$description": "Heavy/modal backdrop"
      }
    }
  }
}
