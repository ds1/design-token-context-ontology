{
  "$description": "Appearance preference tokens - user-controllable visual settings",

  "color-scheme": {
    "$description": "User color scheme preference",
    "$extensions": {
      "ontology.layer": "preference",
      "ontology.references": "context.appearance.color-scheme"
    },
    "current": {
      "$value": "{context.appearance.color-scheme.light}",
      "$type": "string",
      "$description": "Current resolved color scheme"
    },
    "default": {
      "$value": "auto",
      "$type": "string",
      "$description": "Default to system preference"
    }
  },

  "theme": {
    "$description": "Brand/application theme",
    "$extensions": {
      "ontology.layer": "preference"
    },
    "brand": {
      "$value": "default",
      "$type": "string",
      "$description": "Brand theme identifier"
    },
    "variant": {
      "$value": "standard",
      "$type": "string",
      "$description": "Theme variant (standard, tinted, vivid, muted)"
    }
  },

  "contrast": {
    "$description": "User contrast preference",
    "$extensions": {
      "ontology.layer": "preference",
      "ontology.references": "context.appearance.contrast-preference"
    },
    "level": {
      "$value": "standard",
      "$type": "string",
      "$description": "Contrast level preference"
    },
    "ratio-minimum": {
      "$value": 4.5,
      "$type": "number",
      "$description": "Minimum contrast ratio for text"
    },
    "ratio-large-text": {
      "$value": 3.0,
      "$type": "number",
      "$description": "Minimum contrast ratio for large text"
    }
  }
}
