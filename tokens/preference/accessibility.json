{
  "$description": "Accessibility preference tokens - user needs and system settings",

  "motion": {
    "$description": "Motion preference",
    "$extensions": {
      "ontology.layer": "preference",
      "ontology.references": "context.accessibility.reduced-motion"
    },
    "reduce": {
      "$value": false,
      "$type": "boolean",
      "$description": "Reduce motion preference active"
    },
    "duration-scale": {
      "$value": 1.0,
      "$type": "number",
      "$description": "Animation duration multiplier (0 = instant, 1 = normal)"
    },
    "allow-essential": {
      "$value": true,
      "$type": "boolean",
      "$description": "Allow essential motion (loading indicators)"
    }
  },

  "transparency": {
    "$description": "Transparency preference",
    "$extensions": {
      "ontology.layer": "preference",
      "ontology.references": "context.accessibility.reduced-transparency"
    },
    "reduce": {
      "$value": false,
      "$type": "boolean",
      "$description": "Reduce transparency preference active"
    },
    "backdrop-blur": {
      "$value": true,
      "$type": "boolean",
      "$description": "Allow backdrop blur effects"
    }
  },

  "color-vision": {
    "$description": "Color vision accommodation",
    "$extensions": {
      "ontology.layer": "preference",
      "ontology.references": "context.accessibility.cvd-safe-mode"
    },
    "mode": {
      "$value": "none",
      "$type": "string",
      "$description": "CVD accommodation mode"
    },
    "require-patterns": {
      "$value": false,
      "$type": "boolean",
      "$description": "Require patterns alongside color"
    },
    "require-icons": {
      "$value": true,
      "$type": "boolean",
      "$description": "Require icons for status (always recommended)"
    }
  },

  "focus": {
    "$description": "Focus indicator preferences",
    "visibility": {
      "$value": "default",
      "$type": "string",
      "$description": "Focus visibility level (default, enhanced)"
    },
    "ring-width-default": {
      "$value": 2,
      "$type": "dimension",
      "$description": "Default focus ring width"
    },
    "ring-width-enhanced": {
      "$value": 4,
      "$type": "dimension",
      "$description": "Enhanced focus ring width"
    }
  },

  "target-size": {
    "$description": "Interactive target size",
    "mode": {
      "$value": "default",
      "$type": "string",
      "$description": "Target size mode (default, large)"
    },
    "minimum-default": {
      "$value": 24,
      "$type": "dimension",
      "$description": "Default minimum (WCAG AA)"
    },
    "minimum-large": {
      "$value": 44,
      "$type": "dimension",
      "$description": "Large minimum (WCAG AAA)"
    }
  }
}
