{
  "$description": "Density preference tokens - user-controllable spatial settings",

  "mode": {
    "$description": "User density mode preference",
    "$extensions": {
      "ontology.layer": "preference",
      "ontology.references": "context.density.density-mode"
    },
    "current": {
      "$value": "comfortable",
      "$type": "string",
      "$description": "Current density mode (compact, comfortable, spacious)"
    },
    "auto-switch": {
      "$value": true,
      "$type": "boolean",
      "$description": "Auto-switch density based on viewport/input"
    }
  },

  "spacing-multiplier": {
    "$description": "Spacing adjustment per density mode",
    "compact": {
      "$value": 0.75,
      "$type": "number",
      "$description": "Compact mode spacing multiplier"
    },
    "comfortable": {
      "$value": 1.0,
      "$type": "number",
      "$description": "Comfortable mode spacing multiplier"
    },
    "spacious": {
      "$value": 1.25,
      "$type": "number",
      "$description": "Spacious mode spacing multiplier"
    }
  },

  "component-height": {
    "$description": "Base component heights per density",
    "compact": {
      "$value": 32,
      "$type": "dimension",
      "$description": "Compact component height"
    },
    "comfortable": {
      "$value": 40,
      "$type": "dimension",
      "$description": "Comfortable component height"
    },
    "spacious": {
      "$value": 48,
      "$type": "dimension",
      "$description": "Spacious component height"
    }
  },

  "touch-target": {
    "$description": "Touch target requirements",
    "minimum": {
      "$value": 44,
      "$type": "dimension",
      "$description": "Minimum touch target (always enforced)"
    },
    "enforce": {
      "$value": true,
      "$type": "boolean",
      "$description": "Enforce minimum touch targets"
    }
  }
}
